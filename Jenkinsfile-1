pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Run Tests') {
      steps {
        script {
          def mariadb = docker.image('mariadb:latest')
          mariadb.withRun('-e MYSQL_ROOT_PASSWORD=rootpassword -e MYSQL_DATABASE=note_taking_app -e MYSQL_USER=noteuser -e MYSQL_PASSWORD=password') { c ->
            docker.image('openjdk:11-jdk').inside("--link ${c.id}:db") {
              // Wait until MariaDB service is up
              sh 'while ! mysqladmin ping -hdb --silent; do sleep 1; done'
              // Run the tests with Maven
              sh 'mvn clean test'
            }
          }
        }
      }
    }
  }
}

